<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Intranet Siix Sem</title>
    @Styles.Render("~/Content/siixsem_cssnavbar.css")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!--Styles.Render("~/Content/bootstrap.min.css")-->
    @Scripts.Render("~/bundles/modernizr")
    <script src='https://code.jquery.com/jquery-3.4.1.min.js'></script>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Alertify CSS -->
    <link rel="stylesheet" href="~/Content/alertify.min.css">
    <script src="~/Scripts/alertify.min.js"></script>



</head>
<body>
    <header>
        <div class="topnav" id="myTopnav">
            @if (Session["id"] != null)
            {
                <a class="nav-link" href="/Home/About">Inicio</a>
                switch (Session["type_user"] as string)
                {
                    case "Administrador":


                        <div class="dropdownnav">
                            <button class="dropbtn">
                                IT
                            </button>
                            <div class="dropdownnav-content">

                                @switch (Session["id_department"] as string)
                                {
                                    case "10":
                                        <a href="/siixsem_it/responsive_letters">Cartas Responsivas</a>
                                        <a href="/siixsem_it/equipos_asignados">Equipos Asignados</a>
                                        <a href="/siixsem_it/MasterList">Inventario</a>
                                        <a href="/siixsem_it/usuarios">Usuarios</a>
                                        <a href="/siixsem_it/Facturas">Facturas</a>
                                        break;
                                    default:
                                        <a href="/siixsem_it/Asignacion_hardware">Asignación de equipo</a>
                                        <a href="/siixsem_it/responsive_letters">Cartas Responsivas</a>
                                        <a href="/siixsem_it/equipos_asignados">Equipos Asignados</a>
                                        <a href="/siixsem_it/MasterList">Inventario</a>
                                        <a href="/siixsem_it/usuarios">Usuarios</a>
                                        <a href="/siixsem_it/Facturas">Facturas</a>
                                        break;
                                }

                            </div>
                        </div>

                        break;
                    case "Estandar":
                        <div class="dropdownnav">
                            <button class="dropbtn">
                                IT
                            </button>
                            <div class="dropdownnav-content">
                                <a href="/siixsem_it/equipos_asignados">Equipos Asignados</a>
                            </div>
                        </div>
                        break;
                }
                <div class="dropdownnav">
                    <button class="dropbtn">
                        Solicitudes
                    </button>
                    <div class="dropdownnav-content">
                        <a href="/siixsem_it/responsive_letters">Correo</a>
                        <a href="/siixsem_it/IT_services_request">Servicios</a>
                        <a href="/siixsem_it/loan_hardware">Equipos</a>
                    </div>
                </div>
                <a class="nav-link" href="/Home/exit">Salir</a>
            }
            else
            {
               

            }
        </div>

        <div class="container body-content">
            @RenderBody()
            <hr />
        </div>
    </header>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <!--footer>
        <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
    </footer-->
</body>

</html>


